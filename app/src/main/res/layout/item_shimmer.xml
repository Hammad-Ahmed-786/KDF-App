<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="@dimen/_5dp"
    app:cardCornerRadius="@dimen/tweleve_dp"
    app:cardElevation="@dimen/_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/itemImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_9dp"
            android:src="#E7E7E7" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6dp"
            android:background="#E7E7E7"
            android:gravity="center"
            android:text="Menu Item"
            android:textColor="#E7E7E7" />

        <TextView
            android:id="@+id/itemShortDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_12sp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_12sp"
            android:background="#E7E7E7"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="Menu Item Short Description"
            android:textColor="#E7E7E7"
            android:textSize="@dimen/_13sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>